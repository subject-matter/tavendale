{% set buttonClass = 'white' %}

<div class="cta neo-block {{ bottomSpacing }}">
  <div class="container">
    <div class="cta__inner">
      <div class="cta__left cta__animation">
        {% include "_svg/contactIcon" %}
      </div>
      <div class="cta__right">
        <h3 class="cta__text">
          {{ block.sectionTitle }}
        </h3>
        {% if block.sectioncta %}
        <a
          href="{{ block.sectioncta.getUrl() }}"
          class="btn btn--solid btn--{{ buttonClass }}"
        >
          {{ block.sectioncta.getCustomText() }}
        </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>
